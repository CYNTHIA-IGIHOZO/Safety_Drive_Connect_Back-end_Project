  "components": {
    "schemas": {
      "UserSignUp": {
        "type": "object",
        "properties": {
          "userName": {
            "type": "string",
            "example": "test"
          },
          "email": {
            "type": "string",
            "example": "test@gmail.com"
          },
          "password": {
            "type": "string",
            "example": "password"
          },
          "role": {
            "type": "string",
            "example": ["Customer", "Driver"]
          }
        },
        "required": ["email", "password", "role"]
      },
      "OtpVerification": {
        "type": "object",
        "properties": {
          "otp": {
            "type": "string",
            "example": "123456"
          }
        },
        "required": ["otp"]
      },
      "UserSignIn": {
        "type": "object",
        "properties": {
          "email": {
            "type": "string",
            "example": "test@example.com"
          },
          "password": {
            "type": "string",
            "example": "password123"
          }
        },
        "required": ["email", "password"]
      },
      "ForgotPassword": {
        "type": "object",
        "properties": {
          "email": {
            "type": "string",
            "example": "test@example.com"
          }
        },
        "required": ["email"]
      },
      "ResetPassword": {
        "type": "object",
        "properties": {
          "email": {
            "type": "string",
            "example": "test@example.com"
          },
          "newPassword": {
            "type": "string",
            "example": "newpassword123"
          },
          "confirmPassword": {
            "type": "string",
            "example": "newpassword123"
          }
        },
        "required": ["email", "newPassword", "confirmPassword"]
      },
      "ProfileUpdate": {
        "type": "object",
        "properties": {
          "phoneNumber": {
            "type": "string",
            "example": "+123456789"
          },
          "location": {
            "type": "string",
            "example": "New York, USA"
          },
          "costPerhr": {
            "type": "string",
            "example": "20"
          },
          "drivingLicense": {
            "type": "string",
            "example": "DL123456789"
          },
          "availability": {
            "type": "string",
            "example": "Yes"
          },
          "Gender": {
            "type": "string",
            "example": "Male"
          },
          "AddBio": {
            "type": "string",
            "example": "Experienced driver with over 10 years of experience"
          },
          "SpokenLanguage": {
            "type": "string",
            "example": "English, Spanish"
          }
        }
      },
      "Review": {
        "type": "object",
        "properties": {
          "rating": {
            "type": "integer 1-5",
            "example": 5
          },
          "comment": {
            "type": "string",
            "example": "Great service!"
          }
        },
        "required": ["rating", "comment"]
      },
      "Reachout": {
        "type": "object",
        "properties": {
          "message": {
            "type": "string",
            "example": "I need help with my account"
          }
        },
        "required": ["message"]
      },
      "service":{
        "type":"object",
        "properties": {
          "name":{
            "type": "string",
            "example":"Driving student to school service"
          },
          "description":{
            "type": "string",
            "example": "We take student from and to school "
          }
      },
      "required": ["name", "description"]
    }
      
    }
