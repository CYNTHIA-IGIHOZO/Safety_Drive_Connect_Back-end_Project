  "components": {
    "schemas": {
      "UserSignUp": {
        "type": "object",
        "properties": {
          "email": {
            "type": "string",
            "example": "test@example.com"
          },
          "password": {
            "type": "string",
            "example": "password123"
          },
          "confirmPassword": {
            "type": "string",
            "example": "password123"
          }
        },
        "required": ["email", "password", "confirmPassword"]
      },
      "UserSignIn": {
        "type": "object",
        "properties": {
          "email": {
            "type": "string",
            "example": "test@example.com"
          },
          "password": {
            "type": "string",
            "example": "password123"
          }
        },
        "required": ["email", "password"]
      },
      "OtpVerification": {
        "type": "object",
        "properties": {
          "email": {
            "type": "string",
            "example": "test@example.com"
          },
          "otp": {
            "type": "string",
            "example": "123456"
          }
        },
        "required": ["email", "otp"]
      },
      "ForgotPassword": {
        "type": "object",
        "properties": {
          "email": {
            "type": "string",
            "example": "test@example.com"
          }
        },
        "required": ["email"]
      },
      "ResetPassword": {
        "type": "object",
        "properties": {
          "email": {
            "type": "string",
            "example": "test@example.com"
          },
          "newPassword": {
            "type": "string",
            "example": "newpassword123"
          },
          "confirmPassword": {
            "type": "string",
            "example": "newpassword123"
          }
        },
        "required": ["email", "newPassword", "confirmPassword"]
      },
      "ProfileUpdate": {
        "type": "object",
        "properties": {
          "phoneNumber": {
            "type": "string",
            "example": "+123456789"
          },
          "location": {
            "type": "string",
            "example": "New York, USA"
          },
          "costPerhr": {
            "type": "string",
            "example": "20"
          },
          "drivingLicense": {
            "type": "string",
            "example": "DL123456789"
          },
          "availability": {
            "type": "string",
            "example": "Yes"
          },
          "Gender": {
            "type": "string",
            "example": "Male"
          },
          "AddBio": {
            "type": "string",
            "example": "Experienced driver with over 10 years of experience"
          },
          "SpokenLanguage": {
            "type": "string",
            "example": "English, Spanish"
          }
        }
      },
      "Review": {
        "type": "object",
        "properties": {
          "rating": {
            "type": "integer",
            "example": 5
          },
          "comment": {
            "type": "string",
            "example": "Great service!"
          }
        },
        "required": ["rating", "comment"]
      },
      "Reachout": {
        "type": "object",
        "properties": {
          "message": {
            "type": "string",
            "example": "I need help with my account"
          }
        },
        "required": ["message"]
      }
    }
  }
