    "/createprofile": {
      "post": {
        "tags": ["Driver"],
        "summary": "Create a new profile",
        "requestBody": {
          "required": true,
          "content": {
            "multipart/form-data": {
              "schema": {
                "type": "object",
                "properties": {
                  "profilePicture": {
                    "type": "string",
                    "format": "binary",
                    "description": "Profile picture"
                  },
                  "phoneNumber": {
                    "type": "string",
                    "description": "The driver phone number"
                  },
                  "location": {
                    "type": "string",
                    "description": "The driver location"
                  },
                  "costPerhr": {
                    "type": "string",
                    "description": "Cost the driver charges per hour"
                  },
                  "drivingLicense": {
                    "type": "string",
                    "description": "The driver license"
                  },
                  "image": {
                    "type": "string",
                    "format": "binary",
                    "description": "The license photo"
                  },
                  "car": {
                    "type": "string",
                    "description": "Does the driver have a car"
                  },
                  "availability": {
                    "type": "string",
                    "description": "Is the driver available"
                  },
                  "Gender": {
                    "type": "string",
                    "description": "The driver's gender"
                  },
                  "AddBio": {
                    "type": "string",
                    "description": "The driver's bio"
                  },
                  "SpokenLanguage": {
                    "type": "string",
                    "description": "The driver's spoken language"
                  }
                },
                "required": ["phoneNumber", "location", "costPerhr", "drivingLicense", "availability", "Gender"]
              }
            }
          }
        },
        "responses": {
          "201": {
            "description": "Profile created successfully"
          },
          "400": {
            "description": "Bad Request"
          }
        }
      }
    },
    "/updateprofile/{id}": {
      "patch": {
        "tags": ["Driver"],
        "summary": "Update an existing profile",
        "parameters": [
          {
            "name": "id",
            "in": "path",
